<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.UserDao">
    <!--auto generated Code-->
    <resultMap id="UserMap" type="com.example.domain.User">
        <result column="uid" property="uid"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
    </resultMap>
    
    <select id="listUser" resultType="map">
        SELECT
          uid,
          username,
          password
        FROM
          user
    </select>
    
    <insert id="saveUser" parameterType="map">
        INSERT INTO
          `user`(username,password)
        VALUES
          (#{username},#{password})
    </insert>

    <select id="getUserByUsername" parameterType="String" resultMap="UserMap">
        SELECT
          uid,
          username,
          password
        FROM
          user
        WHERE
          username = {#username}
    </select>

    <select id="countUser" parameterType="map" resultType="int">
        SELECT
          COUNT(*)
        FROM
          user
        WHERE
          username = #{username}
    </select>

    <delete id="removeRepeatUser">
        DELETE
        FROM
            `user`
        WHERE
            username IN (
                SELECT
                    username
                FROM (
                        SELECT * FROM `user`
                         ) AS t
                GROUP BY
                    username
                HAVING
                    count(username) > 1
            )
        AND uid NOT IN (
            SELECT
                min(uid)
            FROM(
                    SELECT * FROM `user`
                    ) AS t
            GROUP BY
                username
            HAVING
                count(username) > 1
        )
    </delete>
</mapper>