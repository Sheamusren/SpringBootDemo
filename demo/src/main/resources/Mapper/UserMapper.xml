<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.UserDao">
    <!--auto generated Code-->
    <resultMap id="AllColumnMap" type="com.example.domain.User">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
        <result column="age" property="age"/>
        <result column="password" property="password"/>
    </resultMap>
    
    <select id="listUser" resultType="map">
       SELECT uid,username,password
       FROM user
    </select>
    
    <insert id="saveUser" parameterType="map">
       INSERT INTO `user`(username,password)
       VALUES(#{username},#{password})
    </insert>

    <select id="getUser" parameterType="map" resultType="map">
      SELECT uid,username,password
      FROM user
      WHERE username = {#username}
    </select>

    <select id="countUser" parameterType="map" resultType="int">
        SELECT COUNT(*)
        FROM user
        WHERE username = #{username}
    </select>
</mapper>